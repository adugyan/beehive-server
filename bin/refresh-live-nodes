#!/bin/bash
date +'Updated on %a %b %d %H:%M' > /mnt/datasets/mcs/static/live-nodes.txt
echo >> /mnt/datasets/mcs/static/live-nodes.txt
/usr/lib/waggle/beehive-server/bin/live-nodes >> /mnt/datasets/mcs/static/live-nodes.txt

date +'Updated on %a %b %d %H:%M' > /mnt/datasets/mcs/static/node-info.txt
echo >> /mnt/datasets/mcs/static/node-info.txt
/usr/lib/waggle/beehive-server/bin/node-info >> /mnt/datasets/mcs/static/node-info.txt
