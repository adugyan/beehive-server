BEEHIVE_ROOT?=/mnt
BEEHIVE_DOCKER_NETWORK?=beehive

usage:
	@echo "make [build | deploy | snapshot | rollback]"

build:
	docker build -t $(image) .

rm:
	docker rm -f $(name)

start:
	docker start $(name)

stop:
	docker stop $(name)

restart:
	docker restart $(name)

snapshot:
	docker tag $(image) $(image):snapshot-`date +'%Y.%m.%d.%H.%M.%S'`
	docker tag $(image) $(image):snapshot

rollback: image := $(image):snapshot
rollback: deploy
