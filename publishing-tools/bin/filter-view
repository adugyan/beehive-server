#!/usr/bin/env python3
import argparse
from datetime import datetime
import json
import sys


class Interval:

    def __init__(self, start, end):
        self.start = start
        self.end = end

    def __contains__(self, dt):
        if self.start is not None and self.start > dt:
            return False
        if self.end is not None and self.end <= dt:
            return False
        return True


datetime_format = '%Y/%m/%d %H:%M:%S'


def read_metadata(filename):
    with open(filename) as f:
        nodes = json.load(f)

    for node in nodes:
        # convert commission_date to datetime
        node['commissioned'] = []

        if 'commissioned_at' in node:
            start = datetime.strptime(node['commissioned_at'], datetime_format)
            interval = Interval(start, None)
            node['commissioned'].append(interval)

    return nodes


if __name__ == '__main__':
    parser = argparse.ArgumentParser()
    parser.add_argument('meta', help='metadata config file for view')
    args = parser.parse_args()

    nodes = read_metadata(args.meta)
    nodes_by_id = {node['node_id']: node for node in nodes}

    def isviewable(line):
        fields = line.split(';')
        node_id = fields[0]
        timestamp = datetime.strptime(fields[1], datetime_format)

        if node_id not in nodes_by_id:
            return False

        node = nodes_by_id[node_id]

        return any(timestamp in interval for interval in node['commissioned'])

    for line in filter(isviewable, sys.stdin.readlines()):
        sys.stdout.write(line)
